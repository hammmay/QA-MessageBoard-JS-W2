{{#if updateQuestionForm}}
  <h4>Update {{question.author}}'s Question</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Still Your Question?</label>
        {{input value=author id="author" placeholder=question.author}}
      </div>
      <div class="form-group">
        <label for="title">Edit Your Question</label>
        {{input value=title id="title" placeholder=question.title}}
      </div>
      <div class="form-group">
        <label for="detail">Edit Details</label>
        {{input value=detail id="detail" placeholder=question.detail}}
      </div>
      <button {{action 'update' question}}>Save Changes</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateQuestionForm'}}>Update This Question</button>
{{/if}}
